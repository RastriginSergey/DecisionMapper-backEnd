h1 Signup

form(action='/auth/registration',method='post')
    input(type='text',name='username',placeholder='type your email')
    input(type='text',name='password',placeholder='type your password')
    label(for='isMaster') Master
    input(type='checkbox',name='isMaster')
    input(type='submit')
    
- if (messages && messages.error)
    .message= messages.error